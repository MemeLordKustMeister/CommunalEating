<Page
    x:Class="CommunalEating.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CommunalEating"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,0,0">
        <Grid Margin="40">
            <Pivot Title="FællesspisningsApp">
                <PivotItem Header="Oversigt">
                    <!-- tab1 -->
                    <Grid>

                    </Grid>
                </PivotItem>
                <PivotItem Header="Husstand" Margin="10,0,14,0">
                    <!-- tab2 -->
                    <Grid Margin="10,0,-10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="600"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="185*" />
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="500" />
                            <RowDefinition Height="200*"/>
                        </Grid.RowDefinitions>

                        <!--ListView-->
                        <TextBlock Text="Husstands Oversigt" FontSize="28" FontFamily="Calibri" Margin="65,103,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Width="259" />
                        <ListView x:Name="listView1" Grid.Column="0" HorizontalAlignment="Left" Height="500" Margin="65,0,0,0" VerticalAlignment="Top" Width="666" Background="LightGray" Grid.Row="2"/>

                        <!--Creation Household-->
                        <TextBlock Text="Husstand Oprettelse" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="28" Margin="10,0,0,9" />
                        <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,47,0,0" Width="350" Grid.Column="1" Grid.Row="2"/>
                        <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,122,0,0" Width="350" Grid.Column="1" Grid.Row="2"/>
                        <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,197,0,0" Width="350" Grid.Column="1" Grid.Row="2"/>

                        <TextBlock Text="Adresse" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,22,0,0" Grid.Column="1" Grid.Row="2"/>
                        <TextBlock Text="E-Mail Adresse" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,97,0,0" Grid.Column="1" Grid.Row="2"/>
                        <TextBlock Text="Test" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,172,0,0" Grid.Column="1" Grid.Row="2"/>

                        <AppBarButton Label="Gem " Width="90" Height="75" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="2" Margin="100,0,0,100">
                            <SymbolIcon Symbol="Save"/>
                        </AppBarButton>
                        <AppBarButton Label="Indlæs " Width="100" Height="75" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="2" Margin="200,0,0,100">
                            <SymbolIcon Symbol="OpenFile"/>
                        </AppBarButton>

                        <AppBarButton Label="Tilføj" Width="90" Height="75" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="2" Margin="100,0,0,180">
                            <SymbolIcon Symbol="Add"/>
                        </AppBarButton>
                        <AppBarButton Label="Slet" Width="90" Height="75" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="2" Margin="200,0,0,180">
                            <SymbolIcon Symbol="Delete"/>
                        </AppBarButton>

                        <!--Help Pane-->
                        <TextBlock Text="Information" Grid.Column="2" VerticalAlignment="Bottom" FontSize="28" />
                        <Image Source="Images/info.png" Grid.Column="2" Grid.Row="2" Margin="150,22,544,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                        <Image Source="Images/FAQ.png" Grid.Column="2" Grid.Row="2" Margin="32,127,393,0" VerticalAlignment="Top" HorizontalAlignment="Center" Height="340" Width="369"/>

                    </Grid>
                </PivotItem>
                <PivotItem Header="Planlægning">
                    <!-- tab3 -->
                    <Grid>
                        <Pivot>
                            <PivotItem Header="Ugeplan">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="500"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="500"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                </Grid>

                            </PivotItem>
                        </Pivot>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Historik">
                    <!-- tab4 -->
                    <Grid>

                    </Grid>
                </PivotItem>
                <PivotItem Header="Kalender">
                    <!-- tab5 -->
                    <Grid>
                        <CalendarView HorizontalAlignment="Left" Margin="28,25,0,0" VerticalAlignment="Top" Height="400" Width="480"/>

                    </Grid>
                </PivotItem>
            </Pivot>
        </Grid>
    </Grid>
</Page>
