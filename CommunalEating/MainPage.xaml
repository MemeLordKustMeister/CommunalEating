<Page
    x:Class="CommunalEating.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CommunalEating"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Margin="40">
            <Pivot Title="FællesspisningsApp">
                <PivotItem Header="Oversigt">
                    <!-- tab1 -->
                    <Grid>

                    </Grid>
                </PivotItem>
                <PivotItem Header="Husstand">
                    <!-- tab2 -->
                    <Grid Margin="20">
                        
                    </Grid>
                </PivotItem>
                <PivotItem Header="Planlægning">
                    <!-- tab3 -->
                    <Grid>
                        <Pivot>
                            <PivotItem Header="Ugeplan">
                                <Grid Margin="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="500"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="500"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>


                                    <TextBlock Text="Vært" Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25"/>
                                    <TextBlock Text="Beskrivelse" FontSize="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,160" Grid.Column="0" Grid.Row="1"/>
                                    <TextBlock Text="Overskrift" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,80" Grid.Column="0" Grid.Row="1" FontSize="25"/>
                                    <TextBlock Text="Note" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="300,0" Grid.Column="0" Grid.Row="1" FontSize="25"/>
                                    <TextBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,40" Width="250" Background="LightGray" IsReadOnly="True" PlaceholderText="Ingen vært valgt" />
                                    <TextBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,120" Width="250" Background="LightGray" IsReadOnly="True" PlaceholderText="Ingen titel valgt" />
                                    <TextBox Grid.Column="0" Grid.Row="1" Margin="0,0,0,200" Background="LightGray" IsReadOnly="True" PlaceholderText="Ingen beskrivelse valgt" HorizontalAlignment="Left" Width="250" Height="100" VerticalAlignment="Bottom"/>
                                </Grid>

                            </PivotItem>
                        </Pivot>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Historik">
                    <!-- tab4 -->
                    <Grid>

                    </Grid>
                </PivotItem>
                <PivotItem Header="Kalender">
                    <!-- tab5 -->
                    <Grid>
                        <CalendarView HorizontalAlignment="Left" Margin="28,25,0,0" VerticalAlignment="Top" Height="400" Width="480"/>

                    </Grid>
                </PivotItem>
            </Pivot>
        </Grid>
    </Grid>
</Page>
